{
  "name": "coora",
  "version": "1.0.0",
  "description": "people care platform",
  "repository": "https://github.com/andreatrygit/coora.git",
  "author": "andrea <andreawscotti@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "hono": "^1.4.2",
    "react": "^18.1.0",
    "react-dom": "^18.1.0"
  },
  "scripts": {
    "client-build": "rm -f ./src/frontend/client-bundle.js.br && esbuild ./src/frontend/client-main.jsx --bundle --minify --target=chrome58,firefox57,safari11,edge1 --outfile=./src/frontend/client-bundle.js && brotli -j ./src/frontend/client-bundle.js && sha256sum -b ./src/frontend/client-bundle.js.br > ./src/frontend/client-bundle-hash-file.txt",
    "server-build": "esbuild ./src/server/worker-main.js --bundle --outfile=./src/server/worker-bundle.js --loader:.html=text --loader:.br=binary",
    "dev": "yarn run client-build && yarn run server-build && npx wrangler dev"
  },
  "devDependencies": {
    "esbuild": "^0.14.42"
  }
}
